{% extends "/layouts/application.twig" %}

{% block content %}
    <div class="container-fluid">
        <div class="page-header">
            <h2 class="title pull-left">
                Manage Attendance
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="widget">
            <div class="widget-header">
                <div class="pull-left">
                    <h2>Update Attendance</h2>
                    <span>Provide all valid information to update attendance record</span>
                </div>
                <div class="pull-right btn-areas">
                    <a href="/attendance/list" class="btn btn-info">Attendance List</a></div>
                <div class="clearfix"></div>
            </div>
            <div class="widget-body">
                <div class="row">
                    <!-- add form column -->
                    <div class="col-md-8 col-sm-8 col-xs-12 personal-info">
                        <form class="form" method="post" action="/attendance/update/{{ attendanceRecord.user.uuid }}/{{ attendanceRecord.date }}">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="users">Users</label>
                                        <select class="form-control" name="user_id" disabled>
                                            <option value="" hidden>Select one</option>
                                            {% for user in users %}
                                                <option value="{{ user.id }}" {{ attendanceRecord.user_id == user.id ? 'selected' : ''}}>{{user.first_name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <input type="hidden" name="user_id" value="{{ attendanceRecord.user.id }}">

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="date">Date</label>
                                        <input name="date" type="date" value="{{ attendanceRecord.date | date('Y-m-d') }}" id="date" class="form-control" disabled>
                                        <input name="id" type="hidden" value="{{ attendanceRecord.id }}" id="id" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="checkin">Check in</label>
                                        <input name="check_in" type="time" id="checkIn" value="{{ attendanceRecord.check_in }}" class="form-control">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="checkout">Check out</label>
                                        <input name="check_out" type="time" value="{{ attendanceRecord.check_out }}" id="checkOut"class="form-control" >
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


