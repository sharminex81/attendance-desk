{% extends "/layouts/application.twig" %}
{% block title %} Attendance Add {% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="page-header">
            <h2 class="title pull-left">
                Manage Attendance
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="widget">
            <div class="widget-header">
                <div class="pull-left">
                    <h2>New Attendance</h2>
                    <span>Provide all valid information to add attendance record</span>
                </div>
                <div class="pull-right btn-areas">
                    <a href="/attendance" class="btn btn-info">Attendance List</a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="widget-body">
                <div class="row">
                    <!-- add form column -->
                    <div class="col-md-8 col-sm-8 col-xs-12 personal-info">
                        <form class="form" method="post" action="/attendance/add">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="users">Users</label>
                                        <select class="form-control" name="user_id">
                                            <option value="" hidden>Select one</option>
                                            {% for user in users %}
                                                <option value="{{ user.id }}" {{ oldValue.user_id == user.id ? 'selected' : '' }}>{{user.first_name }}</option>
                                            {% endfor %}
                                        </select>
                                        {% if errors != NULL %}
                                            <span class="error-text">{{ errors.user_id.0 }}</span>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="date">Date</label>
                                        <input name="date" type="date" id="date" value="{{ oldValue.date }}" class="form-control">
                                        {% if errors != NULL %}
                                            <span class="error-text">{{ errors.date.0 }}</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="checkin">Check in</label>
                                        <input name="check_in" type="time" value="{{ oldValue. check_in}}" id="checkIn" class="form-control">
                                        {% if errors != NULL %}
                                            <span class="error-text">{{ errors.check_in.0 }}</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="checkout">Check out</label>
                                        <input name="check_out" type="time" id="checkOut" value="{{ oldValue. check_out}}"  class="form-control" >
                                        {% if errors != NULL %}
                                            <span class="error-text">{{ errors.check_out.0 }}</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


